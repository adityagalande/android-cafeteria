<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/customerName"
                style="@style/editText"
                android:hint="@string/enter_name" />

            <EditText
                android:id="@+id/customerEmail"
                style="@style/editText"
                android:layout_marginTop="3dp"
                android:hint="@string/enter_email"
                android:inputType="textEmailAddress" />

            <TextView
                style="@style/textViewforItemLable"
                android:text="@string/breakfast" />

            <LinearLayout
                style="@style/itemLinearLayout"
                android:background="@drawable/layout_bg">

                <TextView
                    style="@style/itemName"
                    android:text="@string/burger"
                    android:textColor="@color/black" />

                <TextView
                    style="@style/itemName"
                    android:text="@string/_120"
                    android:textColor="@color/black" />

                <Button
                    style="@style/plusButton"
                    android:background="@drawable/layout_bg"
                    android:onClick="burgerPlus" />

                <TextView
                    android:id="@+id/burgerQTT"
                    style="@style/quantityText" />

                <Button
                    style="@style/minusButton"
                    android:background="@drawable/layout_bg"
                    android:onClick="burgerMinus" />

            </LinearLayout>

            <LinearLayout
                style="@style/itemLinearLayout"
                android:background="@drawable/layout_bg">

                <TextView
                    style="@style/itemName"
                    android:text="@string/garlic_bread"
                    android:textColor="@color/black" />

                <TextView
                    style="@style/itemName"
                    android:text="@string/_149"
                    android:textColor="@color/black" />

                <Button
                    style="@style/plusButton"
                    android:background="@drawable/layout_bg"
                    android:onClick="garlicPlus" />

                <TextView
                    android:id="@+id/garlicQTT"
                    style="@style/quantityText" />

                <Button
                    style="@style/minusButton"
                    android:background="@drawable/layout_bg"
                    android:onClick="garlicMinus" />

            </LinearLayout>

            <LinearLayout
                style="@style/itemLinearLayout"
                android:background="@drawable/layout_bg">

                <TextView
                    style="@style/itemName"
                    android:text="@string/bean_nachos"
                    android:textColor="@color/black" />

                <TextView
                    style="@style/itemName"
                    android:text="@string/_249"
                    android:textColor="@color/black" />

                <Button
                    style="@style/plusButton"
                    android:background="@drawable/layout_bg"
                    android:onClick="nachosPlus" />

                <TextView
                    android:id="@+id/nachosQTT"
                    style="@style/quantityText" />

                <Button
                    style="@style/minusButton"
                    android:background="@drawable/layout_bg"
                    android:onClick="nachosMinus" />

            </LinearLayout>

            <LinearLayout
                style="@style/itemLinearLayout"
                android:background="@drawable/layout_bg">

                <TextView
                    style="@style/itemName"
                    android:text="@string/greek_salad"
                    android:textColor="@color/black" />

                <TextView
                    style="@style/itemName"
                    android:text="@string/_329"
                    android:textColor="@color/black" />

                <Button
                    style="@style/plusButton"
                    android:background="@drawable/layout_bg"
                    android:onClick="saladPlus" />

                <TextView
                    android:id="@+id/saladQTT"
                    style="@style/quantityText" />

                <Button
                    style="@style/minusButton"
                    android:background="@drawable/layout_bg"
                    android:onClick="saladMinus" />

            </LinearLayout>

            <TextView
                style="@style/textViewforItemLable"
                android:text="@string/beverages" />

            <LinearLayout
                style="@style/itemLinearLayout"
                android:background="@drawable/layout_bg">

                <TextView
