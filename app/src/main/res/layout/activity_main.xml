                    android:background="@drawable/layout_bg" />

                <TextView style="@style/quantityText" />

                <Button
                    style="@style/minusButton"
                    android:background="@drawable/layout_bg" />

            </LinearLayout>

            <TextView
                style="@style/textViewforItemLable"
                android:text="@string/dessetr" />

            <LinearLayout
